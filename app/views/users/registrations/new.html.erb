<div>  
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastre-se!</h1>
          <div>            
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control" %>
          </div>
          <div>            
            <%= f.password_field :password, placeholder: "Senha", class:"form-control" %>
          </div>
          <div>            
            <%= f.password_field :password_confirmation, placeholder: "Confirmação da Senha", class:"form-control" %>
          </div>          
          <div>            
            <%= f.submit "Cadastrar", class:"btn btn-lg btn-primary btn-block", style:"float: none; margin-left: 0px" %>            
          </div>
          <div class="clearfix"></div>
            
          <div class="separator">
            <div class="clearfix"></div>
            <br>
            <div>
              <h1><i class="fa fa-graduation-cap"></i> Seja Bem-Vindo!</h1>
              <p>Cadastre-se e Participe da Comunidade Colaborativa Para Estudos De Questões Para Concursos</p>
            </div>
          </div>
        <% end %>
      </section>
    </div>    
  </div>
</div>
