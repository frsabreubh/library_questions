<div>  
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <h1>Troca De Senha</h1>          
          <div>            
            <%= f.password_field :password, placeholder: "Senha", class:"form-control" %>
          </div>
          <div>            
            <%= f.password_field :password_confirmation, placeholder: "Confirmação da Senha", class:"form-control" %>
          </div>          
          <div>            
            <%= f.submit "Alterar Senha", class:"btn btn-lg btn-primary btn-block", style:"float: none; margin-left: 0px" %>            
          </div>
          <div class="clearfix"></div>
            
          <div class="separator">
            <div class="clearfix"></div>
            <br>
            <div>
              <h1><i class="fa fa-graduation-cap"></i> Olá!</h1>
              <p>Você está no ambiente para recuperar, ou, trocar sua senha.</p>
            </div>
          </div>
        <% end %>
      </section>
    </div>    
  </div>
</div>
